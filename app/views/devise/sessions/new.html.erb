<div class="wrapper">
  <center><%= image_tag "https://www.vitalait.net/wp-content/themes/vitalait/imgs/logo.png" %></center>

  <div class="login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <center><p class="title">Plateforme de gestion des cong√©s </p></center>
        <div class="form-inputs">
            <%= f.input :login,
                        label: "Email ou Matricule",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "Email"}
                         %>


            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "Password"} %>

          <%= f.input :remember_me, label: "Se rappeller", as: :boolean if devise_mapping.rememberable? %>
       </div>

        <div class="form-actions">
          <button >
          <span><%= f.button :submit, "Se connecter", class: "state"%></span>
        </button>
        </div>

        <% end %>
  </div>

</div>


